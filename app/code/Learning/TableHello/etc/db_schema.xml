<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="student" resource="default" engine="innodb" comment="Student Details">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Student ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="32" default="simple" comment="Student Name"/>
        <column xsi:type="int" name="marks" padding="10" unsigned="true" nullable="false" identity="false"
                default="0" comment="Student Mark"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>